<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/spacing_32">

    <ImageView
        android:id="@+id/imageViewPlaylistSettings"
        android:layout_width="@dimen/playlist_settings_option_image"
        android:layout_height="@dimen/playlist_settings_option_image"
        android:layout_marginEnd="@dimen/spacing_12"
        android:src="@drawable/spotify_icon_rgb_green" />

    <TextView
        android:id="@+id/textViewPlaylistSettingsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circular_bold"
        android:text="Like"
        android:textSize="@dimen/text_size_16" />
</LinearLayout>