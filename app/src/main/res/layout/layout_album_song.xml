<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/spacing_16">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSongName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:fontFamily="@font/circular_book"
            android:maxLines="1"
            android:text="Winter Sun"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewSongDownloaded"
                android:layout_width="@dimen/download_image"
                android:layout_height="@dimen/download_image"
                app:srcCompat="@drawable/ic_download_filled"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textViewArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_8"
                android:ellipsize="end"
                android:fontFamily="@font/circular_book"
                android:maxLines="1"
                android:text="Sun Of They"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonMoreSettingSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_more" />

</LinearLayout>